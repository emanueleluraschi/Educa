<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Educa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">#2A486E</item>
        <item name="colorPrimaryVariant">@color/primarycolor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondarycolor</item>
        <item name="colorSecondaryVariant">@color/secondarycolor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="editTextStyle">@color/black</item>
        <item name="android:textViewStyle">@color/black</item>
        <item name="materialButtonStyle">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textViewStyle">@id/italic</item>
        <item name="backgroundTint">#2A486E</item>
        <item name="android:textColor">@color/secondarycolorchiaro</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">30sp</item>
        <item name="android:padding">12sp</item>
    </style>


    <style name="Theme.Educa" parent="Base.Theme.Educa" />



</resources>